= form_for(@carrier) do |f|
  #content
    .left.column
      %h3 Cadastros
      = button_to( 'Transportadora', {:action => "index"} )
      = button_to( 'Cidade', {:action => "index"} )
      = button_to( 'Valo/Cid./Transp', {:action => "index"}  )
    .right.column
      %br
      %br
      %h3 Transportadora
      = f.label(:name,"Nome")
      = f.text_field(:name)
      = button_to( 'Buscar', {:action => "index"}  )
      = f.label(:address,"EndereÃ§o")
      = f.text_field(:address)
      %br
      = f.label(:city_id, "Cidade")
      = f.select :city_id, City.all.collect {|c| [ c.name, c.id ]}, prompt: '-- selecione --'
      %br
      = f.label(:zip_code, "CEP")
      = f.text_field(:zip_code)
      %br
      = f.label(:site, "Site")
      = f.text_field(:site)
      %br
      = f.label(:phone, "Telefone")
      = f.text_field(:phone)
      %br
      = f.label(:e_mail, "E-Mail")
      = f.text_field(:e_mail)
      %br
      = f.submit
      = button_to( 'Editar', {:action => "index"}  )
      = button_to( 'Excluir', {:action => "index"}  )