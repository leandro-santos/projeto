= form_for [@carrier] do |f|
  .content
    = error_messages_for @carrier
    %p
      = f.text_field(:name, placeholder: "Nome")
    %p
      = f.text_field(:address, placeholder: "EndereÃ§o")
    %p
      = f.select :city_id, City.all.collect {|c| [ c.name, c.id ]}, prompt: '-- selecione --'
    %p
      = f.text_field(:zip_code, placeholder: "CEP")
    %p
      = f.text_field(:site, placeholder: "Site")
    %p
      = f.text_field(:phone, placeholder: "Telefone")
    %p
      = f.text_field(:e_mail, placeholder: "E-Mail")

    %hr(class="thick")

    %p
      = f.submit('Salvar',:class => "button")
      or
      = link_to 'Cancelar', carriers_path