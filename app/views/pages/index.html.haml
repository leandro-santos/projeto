.top_bar
  = link_to('Home', root_path, class: "button")
  = link_to('Transportadora', carriers_path, class: "button")
  = link_to('Frete', freights_path, class: "button")
= form_for :data, url: page_result_path do |f|
  %div(id='wrapper')
    %div(id='show')
      %ul(class="main_freight")
        %h1(id='logo') Frete FÃ¡cil
      %ul(class="main_search")
        = f.label(:origin_city, "Cidade de origem   :")
        = f.select :origin_city, City.all.collect {|c| [ c.name, c.id ]}, prompt: '-- selecione --'
        %br
        = f.label(:destination_city, "Cidade de destino:")
        = f.select :destination_city, City.all.collect {|c| [ c.name, c.id ]}, prompt: '-- selecione --'
        %br
        = f.label(:weight, "Peso:")
        = f.text_field(:weight)
        = f.submit('Buscar',:class => "button")