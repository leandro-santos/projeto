    %input{:type => "radio", :name => "radio_order", :id => "radio_highest", :value => "salesforce", }
    %br/
    %input{:type => "radio", :name => "radio_order", :id => "radio_lowest", :value => "salesforce", }
  .right.column
    - if @freights.present?
      %h2 Tabela
      %table{:width=>"500px", :border=>"1px"}
        %tbody
          %tr
            - @freights.each do |freight|
              %td
                = image_tag("http://www.encontrasp.com.br/imgs/empresas/%7BFE1BCAA4-542E-4C29-A4C1-A6AF3ADB9E3B%7D_tucano-uchoa.jpg", :border => 0, :width => 120, :height => 100)
              %td
                %h3
                  = freight.carrier.name
                %br
                Endere√ßo:
                = freight.carrier.address
                %br
                Cidade:
                - if freight.carrier.city.present?
                  = freight.carrier.city.name
                %br
                Site:
                = freight.carrier.site
                %br
                Fone:
                = freight.carrier.phone
                %br
                E-mail:
                = freight.carrier.e_mail
              %td
                %h2 Valor:
                %br
                %h3
                  R$
                  = freight.value
                %br
                mais